{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --fix --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run build && firebase deploy --only functions --env-file .env.local",
    "deploy:rag": "firebase deploy --only functions:onVideoWrite,functions:searchVideos,functions:reindexAllVideos",
    "logs": "firebase functions:log",
    "logs:rag": "firebase functions:log --only onVideoWrite,searchVideos,reindexAllVideos",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@pinecone-database/pinecone": "^4.1.0",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node-fetch": "^2.6.12",
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^6.3.1",
    "fluent-ffmpeg": "^2.1.2",
    "node-fetch": "^2.7.0",
    "openai": "^4.83.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^4.9.0"
  },
  "private": true
}
